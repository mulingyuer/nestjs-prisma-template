generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 用户
model User {
  id        Int     @id @default(autoincrement())
  nickname  String? @db.VarChar(255) // 用户昵称
  avatarUrl String? @db.VarChar(255) // 用户头像 URL

  @@map("user")
}
